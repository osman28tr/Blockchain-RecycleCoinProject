@using RecycleCoin.Entities.Concrete

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="../../../../Content/UserRecycle.css" type="text/css" rel="stylesheet" />



<section style="width: 100%; margin-top: -18px; padding-top: 180px; padding-bottom: 70px;background: linear-gradient(230deg, red, #ff00cb);min-height: 100vh;display: flex;justify-content: center;align-items: center;">
	<div style="background-color: #fff;width: 50%;height: 100%;box-shadow: 0px 0px 20px 1px;border-radius: 25px; z-index: 2">
		<div style="text-align: center;margin-top: 23px;">
			<h2>Kullanıcılar</h2>
		</div>
		<div class="text-center d-flex">
			<button class="btn btn-outline-primary" id="showStatisticsBtn" style="margin-left: 70px; margin-right: -170px;">
				<span class="mr-1 arrow">
					<i class="fas fa-chevron-left" style="transition: 1.1s;"></i>
				</span>
				İstatistikler
			</button>

			<hr class="w-50" />
		</div>
		<div class="text-center">
			<h3> Sırala </h3>
			<div class="orderByGroup d-flex flex-wrap flex-row" style="justify-content: space-evenly">
				<button class="btn btn-outline-primary" onclick="arrowClick('name')" id="name">
					Kullanıcı Adı
					<span id="name-arrow" class="ml-1 arrow">
						<i class="notOrderBy fas fa-chevron-right"></i>
					</span>
				</button>
				<button class="btn btn-outline-primary" onclick="arrowClick('amount')" id="amount">
					Adet
					<span id="amount-arrow" class="ml-1 arrow">
						<i class="notOrderBy fas fa-chevron-right"></i>
					</span>
				</button>
				<button class="btn btn-outline-primary" onclick="arrowClick('product')" id="product">
					Ürün Adı
					<span id="product-arrow" class="ml-1 arrow">
						<i class="notOrderBy fas fa-chevron-right"></i>
					</span>
				</button>
				<button class="btn btn-outline-primary" onclick="arrowClick('carbon')" id="carbon">
					Carbon Miktarı
					<span id="carbon-arrow" class="ml-1 arrow">
						<i class="notOrderBy fas fa-chevron-right"></i>
					</span>
				</button>
				<button class="btn btn-outline-primary" onclick="arrowClick('date')" id="date">
					Tarih
					<span id="date-arrow" class="ml-1 arrow">
						<i class="notOrderBy fas fa-chevron-right"></i>
					</span>
				</button>
			</div>

			<hr class="w-75" />

		</div>

		<div id="userListBody" class="w-100">
			<div class="userListItem bg-light text-dark" style="border-bottom-left-radius: 0; border-bottom-right-radius: 0;">
				<div class="col">Ad</div>
				<div class="col">Soyad</div>
				<div class="col">Adet</div>
				<div class="col" style="min-width: 200px">Ürün</div>
				<div class="col">Carbon</div>
				<div class="col">Tarih</div>
			</div>
			<br />
			<ul id="userRecycleItems">
				@Html.Partial("_userRecycleItemsPartial")
			</ul>

		</div>
	</div>
	<div class="position-relative">

		<div id="userInfo" class="position-absolute" style="transform: scaleX(0); transition: 1.2s; left: -300px;top: -300px;">
			@Html.Partial("_userInfoPartial")
		</div>
	</div>

	<div class="position-relative">
		<div id="statisticsPanel" class="position-absolute" style="transform: scaleX(0); transition: 1.2s; left: -932px; top: -300px;">
			@Html.Partial("_showStatisticsPartial")                                                         @* - 350 px açıldığında*@
		</div>
	</div>


</section>


<style type="text/css">
	.activeStatisticPanel {
		left: -1282px !important;
		transform: scaleX(1) !important;
	}
	.activeStatisticBtn {
		transform: rotate(180deg);
	}

</style>
<script type="text/javascript">
	$("#showStatisticsBtn").click(function () {
		$("#statisticsPanel").toggleClass("activeStatisticPanel");
		$("#showStatisticsBtn i").toggleClass("activeStatisticBtn");
	});
</script>
