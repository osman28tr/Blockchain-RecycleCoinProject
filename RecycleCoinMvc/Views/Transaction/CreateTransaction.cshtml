@using RecycleCoin.Entities.Concrete

@{
    ViewBag.Title = "CreateTransaction";
    Layout = "~/Views/Shared/_Layout.cshtml";
	var user = Model as AppUser;
	var rcBalance = Convert.ToDecimal(ViewBag.balanceOfMyAddress);
}

<section style="width: 100%; margin-top: -18px; padding-top: 180px; padding-bottom: 70px; background: linear-gradient(230deg, red, #ff00cb); min-height: 100vh; display: flex; justify-content: center; align-items: center;">
    <div style="background-color: #fff;width: 754.8px;height: 450px;box-shadow: 0px 0px 20px 1px;border-radius: 25px;">
        <div style="text-align: center;margin-top: 23px;">
	        <h2>İşlem Yap</h2>
		        @{ var totalBalance = user.ConvertedCarbon + rcBalance; }
	        <h6>Bakiye : @totalBalance</h6>
        </div>
        <div class="d-flex flex-column align-items-center">
            @using (Html.BeginForm("CreateTransaction", "Transaction", FormMethod.Post, new { @style = "height: 100%;", @class = "d-flex flex-column w-75" }))
            {

                <div class="form-group">
                    <label for="fromAddress">Gönderici Adres</label>
                    <input class="form-control" type="text" value="@user.PrivateKey" id="fromAddress" name="fromAddress" readonly>
                </div>
                <div class="form-group">
                    <label for="toAddress">Alıcı Adres</label>
                    <input class="form-control" type="text" name="toAddress" id="toAddress">
                </div>
                <div class="form-group">
                    <label for="amount">Tutar</label>
                    <input class="form-control" type="number" name="amount" id="amount">
                </div>
                <div class="form-group text-center mt-2">
                    <button id="sendBtn" class="btn ConfirmBtn" type="submit">Gönder</button>
                </div>
            }
        </div>
    </div>
</section>