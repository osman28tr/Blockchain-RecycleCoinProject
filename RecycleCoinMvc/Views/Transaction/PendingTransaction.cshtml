@using RecycleCoinMvc.Models

@{
    ViewBag.Title = "PendingTransaction";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var PendingTransactions = Model as List<TransactionSchema>;
}
<section style="width: 100%; margin-top: -18px; padding-top: 180px; padding-bottom: 70px; background: linear-gradient(230deg, red, #ff00cb); min-height: 100vh; display: flex; justify-content: center; align-items: center;">
    <div style="background-color: #fff;width: 754.8px;height: 430px;box-shadow: 0px 0px 20px 1px;border-radius: 25px;display: flex;flex-direction: column;align-items: center;">
        <div style="text-align: center;margin-top: 23px;">
            <h2>Bekleyen İşlemler</h2>
        </div>
        <div class="d-flex flex-column align-items-center h-75 w-100" style="overflow-y: auto;">
            <div class="table-responsive" data-aos="zoom-in" data-aos-delay="350">
                <table class="table table-striped table-dark" id="TransactionTable">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Gönderen Adres</th>
                            <th>Alıcı Adres</th>
                            <th>Tutar</th>
                            <th>Timestamp</th>
                            <th>Geçerlilik Durumu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (PendingTransactions != null)
                        {

                            for (int i = 0; i < PendingTransactions.Count; i++)
                            {

                                <tr style="background-color: #F42951;">
                                    <td>@i</td>
                                    <td style="word-break: break-all">@PendingTransactions[i].fromAddress</td>
                                    <td style="word-break: break-all">@PendingTransactions[i].toAddress</td>
                                    <td>@PendingTransactions[i].amount</td>
                                    <td>@PendingTransactions[i].timestamp</td>
                                    <td>@PendingTransactions[i].TransactionisValid</td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>

        </div>

        <a class="btn ConfirmBtn" id="mineBtn" href="/Transaction/MinePendingTransaction" type="submit">Kazı yap</a>
    </div>
</section>